{
  "compilerOptions": {
    "target": "es2020", // or newer
    "module": "esnext", // or "esnext" if you want to use ES modules throughout
    "moduleResolution": "node16", // Recommended for Node.js projects, or "nodenext" or "bundler"
    "esModuleInterop": true, // Important for compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // Important for json imports
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
